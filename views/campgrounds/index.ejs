<% layout("layouts/boilerplate")%>

<div id="cluster-map"></div>

<h1 class="custom-heading">Campgrounds</h1>

<% for(let campground of campgrounds){ %>
<a href="/campgrounds/<%= campground._id %>">
  <div class="card mb-3 custom-color">
    <div class="row">
      <div class="c-img col-md-4">
        <% if(campground.images.length > 0) { %>
        <img src="<%= campground.images[0].url %>" alt="" class="img-fluid" />
        <% } %> <% if(campground.images.length == 0) { %>
        <img
          src="https://res.cloudinary.com/dszmcizxu/image/upload/v1682174700/YelpCamp/auqaeolrv9crvbenmpfd.jpg"
          alt=""
          class="img-fluid"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4 class="card-title spl-title"><%= campground.title %></h4>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <i class="fa-solid fa-location-dot" style="color: #ffffff"></i>
            <small> <%= campground.location %> </small>
          </p>
        </div>
      </div>
    </div>
  </div>
</a>
<% } %>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
